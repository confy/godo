package views

templ headerComponent(title string) {
		<head>
			<meta charset="UTF-8"/>
			<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
			<title>{title}</title>
		</head>
}

templ IndexPage(greeting string) {
		<html>
			@headerComponent("Welcome")
			<body>
				<h1>{greeting}</h1>
			</body>
		</html>
}