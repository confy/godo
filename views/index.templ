package views

templ headerComponent(title string) {
	<head>
		<meta charset="UTF-8"/>
		<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
		<link
			rel="stylesheet"
			href="https://cdn.jsdelivr.net/npm/@picocss/pico@2/css/pico.blue.min.css"
		/>
		<title>{ title }</title>
	</head>
}

templ IndexPage(greeting string) {
	<html>
		@headerComponent("Welcome")
		<body>
			<h1>{ greeting }</h1>
		</body>
	</html>
}
