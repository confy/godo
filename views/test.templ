package views

import (
    "github.com/confy/godo/internal/db"
	"github.com/confy/godo/views/components"
)


templ TestPage(User db.User, todos []db.Todo) {
	<html>
		@components.Header("Welcome")
		<body>
			<h1>Hello, {string(User.Login)}</h1>
            <h1>{string(User.Email)}</h1>
			<img src={string(User.AvatarURL)} alt="avatar" />
			<br></br>
			@components.TodoList(todos)
		</body>
	</html>
}
